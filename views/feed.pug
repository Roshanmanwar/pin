doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Document
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH", crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js", integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz", crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js", integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r", crossorigin="anonymous")
		script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js", integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy", crossorigin="anonymous")
		link(rel="stylesheet", href="/css/feed.css")
		
	body
		.buttons
			a.profile.btn.btn-primary.btn-sm(href="/") Profile
			a.btn.btn-danger.btn-sm(href="/logOut") log out  
		.cards 
			each post in posts			
				.card
					img.card-img-top(src=`/images/${post.image}`, alt="...")
					.like
						form(action=`/likes/${post._id}`, method="get")
							button.btn.btn-primary.btn-sm(type="submit", value="") like
						

					.card-body
						hr
						p=`Caption :- ${post.postText}`
						//- p=`date:-${post.createdAt.substring(1,5)}`
						- const date = new Date();
						- const slicedDate = date.toISOString().slice(0, 10); // Slice the date to extract the year, month, and day (YYYY-MM-DD format)

						p= `Date :- `+ slicedDate
						p= `likes : ${post.likes.length}`
					
												