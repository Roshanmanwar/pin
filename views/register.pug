    body 
        .container
            .content
                // pinterest logo
                img.img1(src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png", alt="pin logo")
                p.header Register here  to see more
                form(action="/saveUser" method="post")
                    input.detail(type="text", placeholder="User Name", name="userName")
                    br
                    input.detail(type="password", placeholder="Password", name="password")
                    input.detail(type="email", placeholder="Email",name="email")
                    input.detail(type="text", placeholder="Full Name ",name="fullName")
                    //- h4 Forgot your password?
                    input.btn.btn-primary(type="submit",value="Register Account")
                footer
                    span Terms of Service, Privacy policy.
                    hr
                    p Already Have a Account
                    a(href="/login") Login Here
